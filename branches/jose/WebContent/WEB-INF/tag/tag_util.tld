<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE taglib
PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
"http://java.sun.com/j2ee/dtd/web-jsptaglibrary_1_2.dtd">
<taglib>
	<tlib-version>1.0</tlib-version>
	<jsp-version>1.2</jsp-version>
	<short-name>utilidades</short-name>
	<uri>http://www.formacion.ipartek.com/tags/util</uri>
	<description>
		Librerias TagLib de utilidades
	</description>

	<tag>
		<name>select</name>
		<tag-class>com.ipartek.formacion.helloweb.tag.SelectOptionsTag</tag-class>
		<body-content>empty</body-content>
		<description>
			Crea un cuadro de select
		</description>
		<attribute>
			<name>nameSelect</name>
			<required>true</required>
		</attribute>
		<attribute>
			<name>idSelect</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>classSelect</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>valuesOptions</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>textosOptions</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>indSeleccionOption</name>
			<required>false</required>
		</attribute>
	</tag>
</taglib>

