<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>HelloWeb</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>Servlet que valida el logueo</description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloworld.controler.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Controla el fin de sesion</description>
    <display-name>LogoutServlet</display-name>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloworld.controler.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>CRUD para Persona</description>
    <display-name>PersonaServlet</display-name>
    <servlet-name>PersonaServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloworld.controler.PersonaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PersonaServlet</servlet-name>
    <url-pattern>/persona</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <taglib>
      <taglib-uri>http://www.formacion.ipartek.com</taglib-uri>
      <taglib-location>/WEB-INF/tag/tag_hello.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://www.formacion.ipartek.com/tags/util</taglib-uri>
      <taglib-location>/WEB-INF/tag/selectOptions.tld</taglib-location>
    </taglib>
  </jsp-config>
  <listener>
    <listener-class>com.ipartek.formacion.helloweb.listener.SessionListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.ipartek.formacion.helloweb.listener.InitListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>ServletIdioma</display-name>
    <servlet-name>ServletIdioma</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.ServletIdioma</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletIdioma</servlet-name>
    <url-pattern>/idioma</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>RolServlet</display-name>
    <servlet-name>RolServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.RolServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RolServlet</servlet-name>
    <url-pattern>/rol</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CalificacionServlet</display-name>
    <servlet-name>CalificacionServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.CalificacionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CalificacionServlet</servlet-name>
    <url-pattern>/calificacion</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>LoadErrorFilter</display-name>
    <filter-name>LoadErrorFilter</filter-name>
    <filter-class>com.ipartek.formacion.helloweb.filter.LoadErrorFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoadErrorFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>FilterJsp</display-name>
    <filter-name>FilterJsp</filter-name>
    <filter-class>com.ipartek.formacion.helloweb.filter.FilterJsp</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FilterJsp</filter-name>
    <url-pattern>/*.jsp</url-pattern>
  </filter-mapping>
</web-app>